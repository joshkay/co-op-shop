{
   "compilerOptions": {
     "target": "es5",
     "lib": [
       "es5",
       "es6",
       "dom",
       "dom.iterable",
       "esnext"
     ],
     "allowJs": true,
     "skipLibCheck": true,
     "esModuleInterop": false,
     "allowSyntheticDefaultImports": true,
     "experimentalDecorators": true,
     //"strict": true,
     "forceConsistentCasingInFileNames": true,
     "module": "commonjs",
     "outDir": "./build",
     "moduleResolution": "node",
     "resolveJsonModule": true,
     "jsx": "preserve"
   },
   "include": [
      "src/**/*.ts",
      "node_modules/cypress",
      "cypress/*/*.ts"
   ]
 }
 

